  <Target Name="CopyFFMPEG_OSX" DependsOnTargets="GetOSIdentifiersFFMPEG" AfterTargets="Build" Condition=" $(OSPlatform) == 'OSX' ">
    <ItemGroup >
      <OSX_64_FFMPEG Include="$(MSBuildThisFileDirectory)..\data\x64\libBB74.Media.Native.dll.dylib">
        <Link>x64\libBB74.Media.Native.dll.dylib</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </OSX_64_FFMPEG>
    </ItemGroup>
    <Copy
        SourceFiles="@(OSX_64_FFMPEG)"
        DestinationFolder="$(TargetDir)"
        />
    <Copy
        SourceFiles="@(OSX_64_FFMPEG)"
        DestinationFolder="bin/$(Configuration)/$(AssemblyName).app/Contents/MonoBundle/"
        />
    <Message Importance="High" Text="copied OS-X ffmpeg files" />
  </Target>

  <Target Name="CopyFFMPEG_Linux" DependsOnTargets="GetOSIdentifiersFFMPEG" AfterTargets="Build" Condition=" $(OSPlatform) == 'Linux' ">
